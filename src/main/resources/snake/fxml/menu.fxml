<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="900.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="snake.MenuController">
   <children>
      <VBox alignment="CENTER" prefHeight="240.0" prefWidth="720.0">
         <children>
            <Label styleClass="title-label" text="Snake">
               <effect>
                  <Reflection topOffset="-10.0" />
               </effect>
            </Label>
         </children>
      </VBox>
      <VBox fx:id="root" alignment="CENTER_LEFT" fillWidth="false" spacing="30.0" VBox.vgrow="ALWAYS">
         <children>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onPlay" styleClass="main-menu-button" text="Play" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onLevelEditor" styleClass="main-menu-button" text="Level Editor" />
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onExit" styleClass="main-menu-button" text="Exit" />
         </children>
         <padding>
            <Insets bottom="50.0" left="100.0" />
         </padding>
      </VBox>
   </children>
</VBox>
